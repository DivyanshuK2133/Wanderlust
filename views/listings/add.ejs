<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New listing</h3>
            <form method="POST" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
                
                <div class="mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                    <div class="invalid-feedback">Title must be valid</div>
                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Description must be valid</div>

                </div>
                <div class="mb-2">
                    <label for="image" class="form-label">Upload image</label>
                    <input name="listing[image]" type="file" class="form-control" required>

                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="mb-2">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="enter price"  type="number" class="form-control" required>
                            <div class="invalid-feedback">Price must be valid</div>

                        </div>
                    </div>
                    <div class="col-8">
                        <div class="mb-2">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                            <div class="invalid-feedback">Country must be valid</div>

                        </div>
                    </div>

                </div>
                <div class="mb-2">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location must be valid</div>

                </div>        
                <br>
                <button class="btn btn-dark add-btn">Submit</button>
            </form>
            <br>
        </div>
    </div>    
</body>

<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Sign Up for WanderLust</h1>
    </div>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input name="username" placeholder="Enter Username" type="text" class="form-control" required>
                <div class="invalid-feedback">Username must be valid</div>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label">Username</label>
                <input name="email" placeholder="Enter email" type="email" class="form-control" required>
                <div class="invalid-feedback">Email must be valid</div>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Username</label>
                <input name="password" placeholder="Enter password" type="password" class="form-control" required>
                <div class="invalid-feedback">password must be valid</div>
            </div>
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>
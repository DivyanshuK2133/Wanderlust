<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h1>Edit Your Listing</h1>
            <hr>
        </div>
        <div class="col-8 offset-2">
            <form method="POST" action="/listing/<%= listing._id %>?_method=PUT " novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" value="<%=listing.title%>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Title must be valid</div>
                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description must be valid</div> 
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="mb-2">
                            <label for="price" class="form-label">Price</label>
                            <input name="price" value="<%= listing.price %>"  type="number" class="form-control" required>
                            <div class="invalid-feedback">Price must be valid</div>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="mb-2">
                            <label for="country" class="form-label">Country</label>
                            <input name="country" value="<%= listing.country %>" type="text" class="form-control" required>
                            <div class="invalid-feedback">Country must be valid</div>
                        </div> 
                    </div>
                </div>
                <div class="mb-2">
                    <label for="image" class="form-label">Image</label>
                    <input name="image" type="file" class="form-control">
                    <div class="invalid-feedback"> Image url must be valid</div>
                </div>
                <div class="mb-2">
                    <label for="location" class="form-label">Location</label>
                    <input name="location" value="<%= listing.location %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location must be valid</div>
                </div>
                <br>        
                <button class="btn btn-dark add-btn">Done</button>
            </form>
            <br>
        </div>
    </div>
</div>
</body>
